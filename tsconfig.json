{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": { "*": ["*"] },
    "typeRoots": ["./types", "./node_modules/@types"],
    "strict": true
  },
  "include": ["src/**/*", "src/types/**/*"]
}
